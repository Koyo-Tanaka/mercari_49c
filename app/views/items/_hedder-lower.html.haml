.pc-header-box-lower
  .pc-header-box-lower__left
    %li
      %h2
        = link_to "", "https://www.mercari.com/jp/category/", class: "pc-header-lower__left list-parent"
        %i
          = fa_icon "list-ul"
        %span カテゴリーから探す
        = render partial: 'category'

    %li
      %h2
        = link_to "", "https://www.mercari.com/jp/category/", class: "pc-header-lower list-brand"
        %i
          = fa_icon "tag"
        %span ブランドから探す
        = render partial: 'brand'

  .pc-header-box-lower__right
    %ul.pc-header-box-lower__right-login-nav
      %li.signup-box
        = link_to "新規会員登録", "https://www.mercari.com/jp/signup/", class: "sp-header-btn header-signup"
      %li.login-box
        = link_to "ログイン", "https://www.mercari.com/jp/login/?login_callback=https%3A%2F%2Fwww.mercari.com%2Fjp%2F", class: "sp-header-btn header-login"
