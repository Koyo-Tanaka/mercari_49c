.item
  .item_header
    .item_header_icon
      = link_to '/' do
        = image_tag 'http://u0u0.net/QHiY',width:'180px',class:"mercari_icon"
  .item_main
    .item_main_center
      = form_tag('/items', method: :post,onSubmit:"return checkSubmit()",multipart: true) do 
        .item_main_center-cell1
          %h2 商品の情報を入力
        .item_main_center-cell2
          .item_main_center-cell2-center
            %ul
              %li.left 出品画像
              %li.right_hissu 必須
            %p 最大10枚までアップロードできます
            .drag
              .drag_over
                .drag_center
                  %p ドラッグアンドドロップ
                  %p またはクリックしてファイルをアップロード
              %input{type:"file", class:"file",accept:".jpg,.gif,.png,image/jpeg,image/png",required:"true"}
              .drag_over2
                .drag_center2
                  %p ドラッグアンドドロップ
                  %p またはクリックしてファイルをアップロード
        .item_main_center-cell3
          .item_main_center-cell3-center
            .item_main_center-cell3-center_top
              %ul
                %li.left 商品名
                %li.right_hissu 必須
              %input{name:"item_name", placeholder:"商品名（必須40文字まで）", required:"true"}
            .item_main_center-cell3-center_bottom
              %ul
                %li.left 商品の説明
                %li.right_hissu 必須
              %textarea{name:"item_description",rows:"5",placeholder:"商品の説明（必須1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に１万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", required:"true"}
        
        
        .item_main_center-cell4
          .item_main_center-cell4-left
            %h5 商品の詳細
          .item_main_center-cell4-right
            = render "newCategory"

            .item_main_center-cell4-right_selectSize
              %ul
                %li.left サイズ
                %li.right_hissu 必須
              %select{class:"default",name:"item_size"}
                %option ---
                %option XXS以下
                %option XS(SS)
                %option S
                %option M
                %option L
                %option XL(LL)
                %option 2XL(3L)
                %option 3XL(4L)
                %option 4XL(5L)以上
                %option FREE SIZE
              %i.fa.fa-chevron-down

            .item_main_center-cell4-right_selectBrand
              %ul
                %li.left ブランド
                %li.right_nini 任意
              %input{placeholder:"例）シャネル",name:"item_brand"}

            .item_main_center-cell4-right_selectBox
              %ul
                %li.left 商品の状態
                %li.right_hissu 必須
              %select{class:"default",name:"item_condition",required:"true"}
                %option ---
                %option 新品、未使用
                %option 未使用に近い
                %option 目立った傷や汚れなし
                %option やや傷や汚れなし
                %option 傷や汚れあり
                %option 全体的に状態が悪い
              %i.fa.fa-chevron-down
              
        .item_main_center-cell5
          .item_main_center-cell5-left
            %h5 配送について
            = link_to '?',"http://urx.space/W3Wr" 
          .item_main_center-cell5-right
            .item_main_center-cell5-right_select1.select1
              %ul
                %li.left 配送料の負担
                %li.right_hissu 必須
              %select{id:'drive',class:"default",name:"item_deliveryfee",required:"true"}
                %option ---
                %option 送料込み(出品者負担)
                %option 着払い(購入者負担)
              %i.fa.fa-chevron-down
            .item_main_center-cell5-right_selectBox.driveWay
              %ul
                %li.left 発送の方法
                %li.right_hissu 必須
              %select{class:"default",name:"item_deliveryWay"}
                %option ---
                %option 未定
                %option らくらくメルカリ便
                %option ゆうメール
                %option レターパック
                %option 普通郵便(定形、定形外)
                %option クロネコヤマト
                %option ゆうパック
                %option クリックポスト
                %option ゆうポケット
              %i.fa.fa-chevron-down
            .item_main_center-cell5-right_selectBox
              %ul
                %li.left 発送元の地域
                %li.right_hissu 必須
              %select{class:"default",name:"item_area",required:"true"}
                %option ---
                %option 北海道
                %option 青森県
                %option 岩手県
                %option 宮城県
                %option 秋田県
                %option 山形県
                %option 福島県
                %option 茨城県
                %option 栃木県
                %option 群馬県
                %option 埼玉県
                %option 千葉県
                %option 東京都
                %option 神奈川県
                %option 新潟県
                %option 富山県
                %option 石川県
                %option 福井県
                %option 山梨県
                %option 長野県
                %option 岐阜県
                %option 静岡県
                %option 愛知県
                %option 三重県
                %option 滋賀県
                %option 京都府
                %option 大阪府
                %option 兵庫県
                %option 奈良県
                %option 和歌山県
                %option 鳥取県
                %option 島根県
                %option 岡山県
                %option 広島県
                %option 山口県
                %option 徳島県
                %option 香川県
                %option 愛媛県
                %option 高知県
                %option 福岡県
                %option 佐賀県
                %option 長崎県
                %option 熊本県
                %option 大分県
                %option 宮崎県
                %option 鹿児島県
                %option 沖縄県
                %option 未定
              %i.fa.fa-chevron-down

            .item_main_center-cell5-right_selectBox
              %ul
                %li.left 発送までの日数
                %li.right_hissu 必須
              %select{class:"default",name:"item_days_to_ship",required:"true"}
                %option ---
                %option １〜２日で発送
                %option ２〜３日で発送
                %option ４〜７日で発送
              %i.fa.fa-chevron-down

        .item_main_center-cell6
          .item_main_center-cell6-center
            .item_main_center-cell6-center_left
              %h5 販売価格(300〜9,999,999)
              = link_to '?',"http://urx.space/W3Wr"
            .item_main_center-cell6-center_right
              .item_main_center-cell6-center_right_top
                %ul
                  %li.left 価格
                  %li.left.right_hissu 必須
                  %input{name:"item_price",placeholder:"例）300",id:"price", required:"true",type:"number",min:"300",max:"9999999"}
                  %li.right ¥
              .item_main_center-cell6-center_right_main
                .left 販売手数料(10%)
                #rightUp -
              .item_main_center-cell6-center_right_bottom
                .left 販売利益
                %h2#rightDown -
        
        .item_main_center-cell7
          .item_main_center-cell7-center
            %p
              = link_to '禁止されている出品',"https://www.mercari.com/jp/help_center/getting_started/prohibited_items/"
              、
              = link_to '行為',"https://www.mercari.com/jp/help_center/getting_started/prohibited_conduct/"
              を必ずご確認ください。
            %p
              またブランド品でシリアルナンバー等がある場合はご記載ください。
              = link_to '偽ブランドの販売',"https://www.mercari.com/jp/help_center/getting_started/counterfeit_goods/"
              は犯罪であり処罰される可能性があります。
            %p
              また、出品をもちまして
              = link_to '加盟店規約',"https://www.mercari.com/jp/seller_terms/"
              に同意したことになります。
            %input{type:"submit",value:"出品する",class:"go"}
            %input{type:"button",value:"もどる",onclick:"history.back()",class:"back"}
  .item_bottom
    %p.item_bottom_top
      = link_to 'プライバシーポリシー',"https://www.mercari.com/jp/privacy/" 
      = link_to 'メルカリ利用規約',"https://www.mercari.com/jp/tos/"
      = link_to '特定商取引に関する表記',"https://www.mercari.com/jp/tokutei/"
    = link_to new_item_path do
      = image_tag 'http://u0u0.net/YHVI',width:'80px',class:"item_bottom_icon"
    %p.item_bottom_last © 2019 Mercari
