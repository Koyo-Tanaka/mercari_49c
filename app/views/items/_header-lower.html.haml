.pc-header-box-lower
  .pc-header-box-lower__left
    %li
      %h2
        = link_to "", "https://www.mercari.com/jp/category/", class: "pc-header-lower__left list-parent"
        %i
          = fa_icon "list-ul"
        %span カテゴリーから探す
        = render partial: 'items/category'

    %li
      %h2
        = link_to "", "https://www.mercari.com/jp/category/", class: "pc-header-lower list-brand"
        %i
          = fa_icon "tag"
        %span ブランドから探す
        = render partial: 'items/brand'

  .pc-header-box-lower__right
    %ul.pc-header-box-lower__right-login-nav
      - if user_signed_in?
        %li.signup-box
          = link_to "押さないで", new_user_registration_path, class: "sp-header-btn header-signup"
        %li.login-box
          = link_to "ログアウト", destroy_user_session_path, method: :delete ,class: "sp-header-btn header-login"
      - else
        %li.signup-box
          = link_to "新規会員登録", new_user_registration_path, class: "sp-header-btn header-signup"
        %li.login-box
          = link_to "ログイン", new_user_session_path, class: "sp-header-btn header-login"
    
