.header-secound
  .header-secound__logo
    = link_to "#" do
      = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?891577966", class: 'header-secound__logo__icon'
  .header-secound__signup-bar
    %ol.header-secound__signup-bar__stepber
      %li.header-secound__signup-bar__stepber--first
        会員情報
        .bubble.red-color
          %span.red-color
      %li.header-secound__signup-bar__stepber--secound
        電話番号認証
        .bubble.red-color
          %span.red-color
      %li.header-secound__signup-bar__stepber--third
        お届け先住所入力
        .bubble.red-color
          %span.red-color
      %li.header-secound__signup-bar__stepber--forth.red-color-text
        支払い方法
        .bubble.red-color
          %span
      %li.header-secound__signup-bar__stepber--fifth
        完了
        .bubble
.main-secound
  .main-secound__block
    %h2.main-secound__block__title
      支払い方法
  .main-secound__contents
    .main-secound__contents__container
      .main-secound__contents__container__block
        %p.main-secound__contents__container__block__text
          カード番号
        %p.main-secound__contents__container__block__require
          必須
        .main-secound__contents__container__block__form
          %input.input-place{placeholder:"半角数字のみ", type:"text"}
        %ul.main-secound__contents__container__block__card
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?917505326', height: '20', width: '49', class: ''
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?917505326', height: '20px', width: '34px', class: 'card-image'
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?917505326', height: '20', width: '30', class: 'card-image'
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?917505326', height: '20', width: '32', class: 'card-image'
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?917505326', height: '20', width: '21', class: 'card-image'
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?917505326', height: '20', width: '32', class: 'card-image'
          %li
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?917505326', height: '20', width: '32', class: 'card-image'
      .main-secound__contents__container__block
        %p.main-secound__contents__container__block__text
          有効期限
        %p.main-secound__contents__container__block__require
          必須
        .main-secound__contents__container__block__form
          .main-secound__contents__container__block__form--select-box
            %select.prefectures.harf-size
              %option{value: ""} --
              - number = 1
              - while number <= 12 do
                %option{value: "#{number}"} 
                  = number
                - number += 1
            %span.word
              月
          .main-secound__contents__container__block__form--select-box
            %select.prefectures.harf-size
              %option{value: ""} --
              - number = 19
              - while number <= 30 do
                %option{value: "#{number}"} 
                  = number
                - number += 1
            %span.word
              年
      .main-secound__contents__container__block
        %p.main-secound__contents__container__block__text
          セキュリティーコード
        %p.main-secound__contents__container__block__require
          必須
        .main-secound__contents__container__block__form
          %input.input-place{placeholder:"カード背面4桁もしくは3桁の番号", type:"text"}
        .main-secound__contents__container__block__remarks-column
          %span.question-mark
            ?
          %p.blue-color-text
            カード裏面の番号とは？
      .main-secound__contents__container__block
        .main-secound__contents__container__block__btn-next
          = link_to "次へ進む" ,"signup6" ,class:'link-white'
        .bottom-space
= render partial: 'footer'
