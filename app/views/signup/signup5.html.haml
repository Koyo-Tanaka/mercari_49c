.header-secound
  .header-secound__logo
    = link_to "#" do
      = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?891577966", class: 'header-secound__logo__icon'
  .header-secound__signup-bar
    %ol.header-secound__signup-bar__stepber
      %li.header-secound__signup-bar__stepber--first
        会員情報
        .bubble.red-color
          %span.red-color
      %li.header-secound__signup-bar__stepber--secound
        電話番号認証
        .bubble.red-color
          %span.red-color
      %li.header-secound__signup-bar__stepber--third.red-color-text
        お届け先住所入力
        .bubble.red-color
          %span
      %li.header-secound__signup-bar__stepber--forth
        支払い方法
        .bubble
          %span
      %li.header-secound__signup-bar__stepber--fifth
        完了
        .bubble
.main-secound
  .main-secound__block
    %h2.main-secound__block__title
      発送元・お届け先住所入力
  .main-secound__contents
    .main-secound__contents__container
      = form_for @address, url: signup6_signup_index_path, method: :get do |f|
        .main-secound__contents__container__block
          %p.main-secound__contents__container__block__text
            お名前
          %p.main-secound__contents__container__block__require
            必須
          .main-secound__contents__container__block__form
            = f.text_field :firstname, placeholder:"例）徳川", class:'input-place'
          .main-secound__contents__container__block__form
            = f.text_field :lastname,placeholder:"例）家康", class:'input-place'
        .main-secound__contents__container__block
          %p.main-secound__contents__container__block__text
            お名前カナ
          %p.main-secound__contents__container__block__require
            必須
          .main-secound__contents__container__block__form
            = f.text_field :firstname_kana,placeholder:"例）トクガワ", class:'input-place'
          .main-secound__contents__container__block__form
            = f.text_field :lastname_kana,placeholder:"例）イエヤス", class:'input-place'
        .main-secound__contents__container__block
          %p.main-secound__contents__container__block__text
            郵便番号
          %p.main-secound__contents__container__block__require
            必須
          .main-secound__contents__container__block__form
            = f.text_field :postal_code, placeholder:"例）123-4567", class:'input-place'
        .main-secound__contents__container__block
          %p.main-secound__contents__container__block__text
            都道府県
          %p.main-secound__contents__container__block__require
            必須
          .main-secound__contents__container__block__form
            .main-secound__contents__container__block__form--select-box
              = f.collection_select :prefecture,Prefecture.all, :name, :name,{},class:"prefecture"
        .main-secound__contents__container__block
          %p.main-secound__contents__container__block__text
            市区町村
          %p.main-secound__contents__container__block__require
            必須
          .main-secound__contents__container__block__form
            = f.text_field :municipality, placeholder:"例）大阪市北区",class:'input-place'
        .main-secound__contents__container__block
          %p.main-secound__contents__container__block__text
            番地
            %p.main-secound__contents__container__block__require
              必須
            .main-secound__contents__container__block__form
              = f.text_field :house_number,placeholder:"例）茶屋町1-1-1",class:'input-place'
        .main-secound__contents__container__block
          %p.main-secound__contents__container__block__text
            建物名
            %p.main-secound__contents__container__block__require.gray-color
              任意
            .main-secound__contents__container__block__form
              = f.text_field :building_name,placeholder:"例）柳ビル101", class:'input-place'
        .main-secound__contents__container__block
          %p.main-secound__contents__container__block__text
            電話番号
            %p.main-secound__contents__container__block__require.gray-color
              任意
            .main-secound__contents__container__block__form
              = f.text_field :phone_number,placeholder:"例）09012345678",class:'input-place'
        .main-secound__contents__container__block
          .main-secound__contents__container__block__btn-next
            = f.submit "次へ進む" ,class:'link-white'
          .bottom-space
